        <lombok.version>1.18.12</lombok.version>
        <slf4j.version>1.7.25</slf4j.version>
        <local-deploy.skip>false</local-deploy.skip>
        
        <osgi-utils-version>1.0.10</osgi-utils-version>
        <karaf-version>4.2.11</karaf-version>
