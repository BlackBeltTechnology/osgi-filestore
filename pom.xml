<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    
    <groupId>hu.blackbelt.osgi.filestore</groupId>
    <artifactId>parent</artifactId>
    <version>1.2.1-SNAPSHOT</version>
    <packaging>pom</packaging>
    
    <name>OSGi filestore parent</name>
    <description>Parent project of OSGi filestore.</description>
    <properties>
        <project-shortname>osgi-liquibase</project-shortname>
        <project-repositoryId>BlackBeltTechnology/osgi-liquibase</project-repositoryId>

        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.deploy.skip>false</maven.deploy.skip>
        <deployOnly>false</deployOnly>

        <java.version>1.8</java.version>
        <osgi.version>6.0.0</osgi.version>
        <osgi-ds.version>1.3.0</osgi-ds.version>
        <servlet-api.version>2.5</servlet-api.version>
        
        <guava.version>27.1-jre</guava.version>
        <reflections.version>0.9.10</reflections.version>

        <felix-scr-annotations.version>1.12.0</felix-scr-annotations.version>
        <functionaljava.version>4.3</functionaljava.version>
        <javassist.version>3.19.0-GA</javassist.version>
        
        
        <checkstyle.version>8.29</checkstyle.version>
        <checkstyle.plugin.version>3.0.0</checkstyle.plugin.version>
        <checkstyle.skip>false</checkstyle.skip>
        <pmd.version>6.3.0</pmd.version>
        <pmd.plugin.version>3.9.0</pmd.plugin.version>
        <pmd.skip>false</pmd.skip>
        <findbugs.version>3.0.1</findbugs.version>
        <findbugs.plugin.version>3.0.5</findbugs.plugin.version>
        <findbugs.skip>false</findbugs.skip>
        <findbugs.annotations.version>3.0.1</findbugs.annotations.version>
